#include <stdio.h>

int main() {
    char operador;
    double num1, num2, resultado;

    //Menu de operações
    printf("Menu de operações:\n");
    printf("+ : Soma\n");
    printf("- : Subtração\n");
    printf("* : Multiplicação\n");
    printf("/ : Divisão\n");

    //Operação
    printf("Digite o operador (+, -, *, /): ");
    scanf("%c", &operador);

    printf("Digite dois números: ");
    scanf("%lf %lf", &num1, &num2);

    //Resolve a operação
    switch (operador) {
        case '+':
            resultado = num1 + num2;
            printf("%.2lf + %.2lf = %.2lf\n", num1, num2, resultado);
            break;
        case '-':
            resultado = num1 - num2;
            printf("%.2lf - %.2lf = %.2lf\n", num1, num2, resultado);
            break;
        case '*':
            resultado = num1 * num2;
            printf("%.2lf * %.2lf = %.2lf\n", num1, num2, resultado);
            break;
        case '/':
            if (num2 != 0) { // Verifica se o divisor não é zero
                resultado = num1 / num2;
                printf("%.2lf / %.2lf = %.2lf\n", num1, num2, resultado);
            } else {
                printf("Erro: Divisão por zero não permitida.\n");
            }
            break;
        default:
            printf("Erro: Operador inválido.\n");
            break;
    }

    return 0;
}
